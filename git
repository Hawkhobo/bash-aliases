alias gst="git status"
alias ga="git add"
alias gall="git add ."
alias gcm="git commit -m"
alias gb="git branch"
alias gsw="git switch"
alias gph="git push"
alias gpl="git pull"
alias gdf="git diff"
alias gfh="git fetch"
alias glg="git log"
alias grst="git restore"


## special commands below

# print head of shortform log of checked out branch
alias ghead="git log --oneline | head "

# pass all currently unmerged paths to text editor in sequence (hint: use ":wn" to iterate for nvim)
alias gmerge="git diff --name-only --diff-filter=U | xargs -o nvim"
